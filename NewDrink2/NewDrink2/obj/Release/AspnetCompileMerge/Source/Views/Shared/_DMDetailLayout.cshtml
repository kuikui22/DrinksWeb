@using NewDrink2.Models
@model NewDrink2.Models.DMDetailsView
@{
    Layout = null;
    var type = ViewBag.Tyep;
    string Identity1 = NewDrink2.Models.Helper.GetUserIdentity();
    string Identity2 = NewDrink2.Models.Helper.GetUserIdentity2();
    string UserMail = NewDrink2.Models.Helper.GetUserMail();
    int Mess2 = NewDrink2.Models.HomeModels.GetHowManyMessage_UseUserEmail(UserMail);
    int EndMsg = NewDrink2.Models.HomeModels.GetHowManyEndMessage_UseUserEmail(UserMail);
    int Mess = Mess2 + EndMsg;
}
<style>
    .TextChange {
        text-align: center;
    }
        .TextChange td a {
            display: block;
            color: #ffffff;
        }
            .TextChange td a:hover {
                background-color: #ffb20c;                
            }
            .TextChange td a:active {
                background-color: #ffb20c;
            }
    .Pre_Btn {
        position: absolute;
        top: 3px;
        left: 15px;
        z-index: 9999999;
        background-color: #696969;
        margin: 10px auto auto 0px;
        width: 25px;
        height: 25px;
        border-radius: 50%;
        color: #ffffff;
        opacity: 0;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }
        .Pre_Btn:hover {
            background-color: #2a2a2a;
            color: #ffffff;
        }
    .Nex_Btn {
        position: absolute;
        top: 3px;
        right: 20px;
        z-index: 9999999;
        background-color: #696969;
        margin: 10px 0px auto auto;
        width: 25px;
        height: 25px;
        border-radius: 50%;
        color: #ffffff;
        opacity: 0;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }
        .Nex_Btn:hover {
            background-color: #2a2a2a;
            color: #ffffff;
        }
</style>

<a id="Pre_btn" class="Pre_Btn text-center" onclick="Over_left();">
    <div class="TextSizeCh" style="margin: -14px auto auto -2px;"> < </div>
</a>
<table class="text-center" style="min-width: 1000px; height: 52px; font-family: 'Microsoft JhengHei', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">
    <tr class="TextChange" style="line-height: 50px;">
        @for (int i = 0; i < type.Count; i++)
        {
            if (i == 0)
            {
                <td nowrap="nowrap" style="min-width: 120px; text-align: center;">
                    <a href="#@i" aria-controls="@i" role="tab" data-toggle="tab" onclick="SeclectType(@i, '@type[i]', '@ViewBag.OrderID', this)" style="background-color: #ffb20c;">
                        <font size="4" style="margin-left: 10px;">@type[0]</font>
                        &nbsp;&nbsp;
                    </a>
                </td>
            }
            else
            {
                <td nowrap="nowrap" style="min-width: 120px; text-align: center;">
                    <a href="#@i" aria-controls="@i" role="tab" data-toggle="tab" onclick="SeclectType(@i, '@type[i]', '@ViewBag.OrderID', this)">
                        <font size="4" style="margin-left: 10px;">@type[i]</font>
                        &nbsp;&nbsp;
                    </a>
                </td>
            }
        }
    </tr>
</table>
<a id="Nex_Btn" class="Nex_Btn TextSizeCh" onclick="Over_right();">
    <div class="TextSizeCh" style="margin: -14px auto auto 7px;"> > </div>
</a>

@section Scripts{
    <script>
        function Over_left() {
            var L = $('#overHere').scrollLeft();
            $('#overHere').scrollLeft(L + -250);
        }
        function Over_right() {
            var R = $('#overHere').scrollLeft();
            $('#overHere').scrollLeft(R + 250);
        }
    </script>
}
