@model NewDrink2.Models.User
@{
    Layout = "~/Views/Shared/_MyUserLayoutPartial.cshtml";
    ViewBag.Title = "建立新的使用者";
}
<style>
    #jum_back {
        background: url("../image/06.jpg") no-repeat;
        background-size: cover;
    }

    .imgwrapper {
        min-width: 100%;
        max-height: 100%;
    }

    #fontH {
        min-height: 100px;
    }
</style>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddUser", "Manager", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <h5 class="text-danger">
        @ViewBag.Error
    </h5>

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPsd, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPsd, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="建立" />
            @Html.ActionLink("返回", "MyUser", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




