@using NewDrink2.Models
@{
    int DrinkID = ViewBag.DrinkID;
    int NowSort = ViewBag.NowSort;
    int MenuID = ViewBag.MenuID;
}
<!--Model-->
@using (Html.BeginForm("_ChangeSortAny", "Manager", FormMethod.Post))
{
    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id="EditSort">
        <div class="modal-dialog modal-sm" role="document" style="width: 400px">
            <div class="modal-content" style="padding: 10px 0 10px 0;">
                <center class="TextSizeCh">
                    <font style="font-size: 18px">輸入編號</font><br />
                    <input type="hidden" name="DrinkID" value="@DrinkID" />
                    <input type="hidden" name="MenuID" value="@MenuID" />
                    <input type="hidden" name="NowSort" value="@NowSort" />
                    <input type="number" name="sortID" min="1" class="form-control" />
                    <br />
                    <input type="submit" name="subIce" class="btn btn-success" value="送出" />
                </center>
            </div>
        </div>
    </div>
}