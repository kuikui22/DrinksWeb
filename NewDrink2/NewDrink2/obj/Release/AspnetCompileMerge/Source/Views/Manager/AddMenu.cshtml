    @section Scripts {
          @if ((!String.IsNullOrEmpty(ViewBag.AddItem) && ViewBag.AddItem != null) ||(!String.IsNullOrEmpty(ViewBag.PriceSmall) && ViewBag.PriceSmall != null))
