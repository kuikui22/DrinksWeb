@using NewDrink2.Models
@{
    string Sid = ViewBag.SID;
    string Sname = ViewBag.Sname;
    string MenuID = ViewBag.MenuID.ToString();
}
<!--Model-->
@using (Html.BeginForm("_MyMenuSisEditSizemodel", "Manager", FormMethod.Post))
{
    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id="EditSize">
        <div class="modal-dialog modal-sm" role="document" style="width: 400px">
            <div class="modal-content" style="padding: 10px 0 10px 0;">
                <center class="TextSizeCh">
                    <font style="font-size: 18px">編輯尺寸名稱</font><br />
                    <input type="hidden" name="id" value="@Sid" />
                    <input type="hidden" name="MenuID" value="@MenuID" />
                    <input type="text" name="sizeEdit" value="@Sname" class="form-control" />
                    <br />
                    <input type="submit" name="subSize" class="btn btn-success" value="送出" />
                </center>
            </div>
        </div>
    </div>
}

