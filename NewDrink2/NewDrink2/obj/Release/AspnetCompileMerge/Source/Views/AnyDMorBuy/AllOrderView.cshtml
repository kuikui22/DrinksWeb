@using NewDrink2.Models
@model IEnumerable<NewDrink2.Models.AllOrder_View>

@{ 
    Layout = "~/Views/Shared/_AllOrderLayout.cshtml";
}

<style>
    a {
        text-decoration: none !important;
    }
    .NavbarBgColor {
        margin-top: 50px;
        background-color: #ffffff;
    }

    .TopStyle {
        width: 50%;
        height: 48px;
        display: block;
        line-height: 48px;
        text-align: center;
    }

    .bottomTotNav {
        margin-bottom: 50px;
    }

    .tag01 {
        background-color: #04c6c4;
        color: #ffffff;
        border-bottom-left-radius: 10px;
        border-top-left-radius: 10px;
        font-size: 16px;
        padding: 2px 20px 2px 6px;
    }
    .tag02 {
        background-color: #83b66d;
        color: #ffffff;
        border-bottom-left-radius: 10px;
        border-top-left-radius: 10px;
        font-size: 16px;
        padding: 2px 20px 2px 6px;
    }

    .TextSizeCh {
        font-family: 'Microsoft JhengHei', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }
</style>

<div style="margin-top: 50px;">
    @if (Model == null || Model.Count() == 0)
    {
        <br /><br /><br />
        <center>
            <img src="../image/noMessage.png" />
        </center>
        <center>
            <br />
            <p class="TextSizeCh" style="color: #dcdcdc; font-size: 20px;">目前尚無任何紀錄.</p>
        </center>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <a href="@Url.Action("OrderingDetail", "AnyDMorBuy", new { OrderID = item.OrderID })" class="list-group-item" style="font-size: 18px;">
                    <div class="pull-left" style="line-height: 65px; margin-right: 10px;">
                        <img src="../image/drink3ex2.png" />
                    </div>
                    <font class="TextSizeCh" style="font-size: 17px;">
                        團長: @Html.DisplayFor(modelItem => item.UserName)
                    </font><br />
                    <font class="TextSizeCh" style="font-size: 17px; color: #a3a1a1">
                        @Html.DisplayFor(modelItem => item.MenuName)
                    </font><br />
                    <small style="color: #04c6c4" class="TextSizeCh">
                        <img src="../../image/timer.png" style="max-width: 15px;" />
                        @Html.DisplayFor(modelItem => item.CreateTime)
                    </small>
                    @if (item.HaveDrink == 1)
                    {
                        <span style="position: absolute; right: 83px; top: 33px;">
                            <img src="../../image/HaveDrink.png" />
                        </span>
                    }
                    @if (item.CanOrder == 0)
                    {
                        <span class="tag01 TextSizeCh pull-right" style="position: absolute; right: 0; top: 35px;">
                            選購中
                        </span>                       
                    }
                    @if (item.CanOrder == 3)
                    {
                        <span class="tag02 TextSizeCh pull-right" style="position: absolute; right: 0; top: 35px;">
                            跟團中
                        </span>
                    }
                    <br />
                </a>               
            }
        </div>
    }
</div>
