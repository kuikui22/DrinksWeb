@if (TempData["message2"] != null)
{
    <center>
        <div id="PsdSuccess" class="Success_Psd text-center" style="display: none;">
            已成功更改圖片.
        </div>
    </center>
    <script>
            function operate() {
                document.getElementById('PsdSuccess').style.display = "";
                setTimeout("change0()", 1100);
                setTimeout("change0()", 1300);
                setTimeout("change1()", 1500);
                setTimeout("change2()", 1700);
                setTimeout("change3()", 1900);
                setTimeout("change4()", 2100);
                setTimeout("change5()", 2300);
                setTimeout("change6()", 2700);
                setTimeout("disappeare()", 3100);
            }
            function change0() {
                document.getElementById('PsdSuccess').style.opacity = '0.7';
            }
            function change1() {
                document.getElementById('PsdSuccess').style.opacity = '0.6';
            }
            function change2() {
                document.getElementById('PsdSuccess').style.opacity = '0.5';
            }
            function change3() {
                document.getElementById('PsdSuccess').style.opacity = '0.4';
            }
            function change4() {
                document.getElementById('PsdSuccess').style.opacity = '0.3';
            }
            function change5() {
                document.getElementById('PsdSuccess').style.opacity = '0.2';
            }
            function change6() {
                document.getElementById('PsdSuccess').style.opacity = '0.1';
            }
            function disappeare() {

                document.getElementById('PsdSuccess').style.display = "none";
            }

            operate();

    </script>
}

