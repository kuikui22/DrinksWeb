@using NewDrink2.Models
@model IEnumerable<NewDrink2.Models.Menu>


<style>
    .crop-techniquel {
        float: left;
        margin: 0;
        overflow: hidden;
        border: 1px solid #eeeded;
        max-width: 100%;
        min-width:100%;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }
        .crop-techniquel img {
            margin: -20px -15px -40px -55px;
            max-width: 100%;
            min-width: 100%;
        }
    .DivShadow {
        -moz-box-shadow: 0 4px 4px rgba(30%, 30%, 30%, 0.3);
        -webkit-box-shadow: 0 4px 4px rgba(30%, 30%, 30%, 0.3);
        box-shadow: 0 4px 4px rgba(30%, 30%, 30%, 0.3);
    }
    .Pre_Btn {
        position: absolute;
        top: 50px;
        left: 28px;
        z-index: 9999999;
        background-color: #696969;
        margin: 10px auto auto 0px;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        color: #ffffff;
        opacity: 0;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }
        .Pre_Btn:hover {
            background-color: #2a2a2a;
            color: #ffffff;
        }
    .Nex_Btn {
        position: absolute;
        top: 50px;
        right: 20px;
        z-index: 9999999;
        background-color: #696969;
        margin: 10px 0px auto auto;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        color: #ffffff;
        opacity: 0;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }
        .Nex_Btn:hover {
            background-color: #2a2a2a;
            color: #ffffff;
        }
</style>
<a id="Pre_btn" class="Pre_Btn text-center" onclick="Over_left();">
    <div class="TextSizeCh" style="margin: 5px auto auto auto;"> < </div>
</a>
<table style="min-width: 1000px; max-width: 100%;" id="mytable">
    <tr>
        @foreach (var item in Model)
        {
            <td style="width: 250px; height: 200px; padding: 0 5px 0 5px">
                <a href="@Url.Action("DMDetail", "AnyDMorBuy", new { id = item.ID })" style="color: #6c6a6a;">
                    <div style="background-color: #ffffff; border-radius: 10px; margin: auto auto auto auto; max-width: 250px;" class="DivShadow">
                        <p class=" text-center"><img src="../MenuImage/@item.ImageName" style="margin: 0; width: 250px; height: 135px; border-top-left-radius: 10px; border-top-right-radius: 10px;"></p>
                        <p style="font-size: 16px; padding-bottom: 0.3em;" class="TextSizeCh text-center"> 
                            <span style="font-weight:bold;">@Html.DisplayFor(modelItem => item.MenuName)</span>                           
                        </p>
                    </div>
                </a>               
            </td>
        }
    </tr>
</table>
<a id="Nex_Btn" class="Nex_Btn TextSizeCh" onclick="Over_right();">
    <div class="TextSizeCh" style="margin: 5px auto auto auto;"> > </div>
</a>

@section Scripts{
    <script>
        function Over_left() {
            var L = $('#overHere').scrollLeft();
            $('#overHere').scrollLeft( L + -250);
        }
        function Over_right() {
            var R = $('#overHere').scrollLeft();
            $('#overHere').scrollLeft(R + 250);
        }
    </script>
}
